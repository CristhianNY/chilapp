<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical"

        tools:context=".ui.activities.meeting.SuccessMeetingActivity">

        <TextView
            android:id="@+id/felicitaciones"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_marginTop="20dp"
            android:text="Felicidades tu serenata virtual esta agendada , Comparte estos datos con tu cliente" />

        <TextView
            android:id="@+id/mdate"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_marginTop="20dp"
            android:text="12/12/12/10:10" />

        <TextView
            android:id="@+id/mtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:textIsSelectable="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Serenata" />

        <TextView
            android:id="@+id/mcode"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="codigo" />

        <TextView
            android:id="@+id/mpassword"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_marginTop="20dp"
            android:text="ContraseÃ±a:" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/violinistaAnimation"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/exitoso" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="265dp"
            android:layout_height="52dp"
            android:layout_marginBottom="30dp"
            android:background="@color/blue_50"
            android:text="Compartir" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"/>
    </LinearLayout>
</ScrollView>