<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

            <RelativeLayout android:id="@+id/rellay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grad"
                android:paddingBottom="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgUser"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_alignParentStart="true"
                    android:elevation="10dp"
                    android:src="@drawable/anonimo" />
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgUser"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15sp"
                    android:fontFamily="sans-serif-light"
                    android:text="Secretos"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_left" />

                <EditText
                    android:id="@+id/edit_what_are_you_thinkgin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/tv_username"
                    android:hint="@string/hint_what_are_you_thinking"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/border_edit_text"
                    android:padding="30dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignEnd="@id/edit_what_are_you_thinkgin"
                    android:layout_below="@id/edit_what_are_you_thinkgin"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="end">
                    <ImageView
                        android:id="@+id/changColor"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:layout_below="@id/edit_what_are_you_thinkgin"
                        android:src="@drawable/coloricon">

                    </ImageView>

                    <Button
                        android:id="@+id/btn_send_post"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:background="@drawable/send" />
                </LinearLayout>

            </RelativeLayout>
    <include
            android:id="@+id/loaderDashboard"
            android:visibility="gone"
            layout="@layout/progress_bar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/secret_post_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/rellay1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:stackFromEnd="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_swipe"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/animationswipe">
    </com.airbnb.lottie.LottieAnimationView>

</RelativeLayout>
</ScrollView>