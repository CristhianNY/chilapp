<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center">
             <LinearLayout
                 android:id="@+id/postCointainer"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 android:background="@color/colorAccent"
                 android:layout_weight="1">

                <TextView
                    android:id="@+id/secret_post_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeMaxTextSize="50sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="Cristhian Ariel Bonilla Espinosa Y mas " />
            </LinearLayout>
    <include
        android:id="@+id/countersContainer"
        layout="@layout/counter_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/intrinsic_padding"
        android:layout_marginEnd="6dp"
        android:layout_gravity="bottom"
        android:layout_marginRight="@dimen/intrinsic_padding"/>
</LinearLayout>