<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activities.meeting.ZoomMeetingActivity">


                <EditText
                    android:id="@+id/meeting_code"
                    android:layout_width="220dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="95dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="96dp"
                    android:ems="10"
                    android:hint="Id del evento"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo_image" />

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="178dp"
                    android:layout_height="163dp"
                    android:layout_marginStart="117dp"
                    android:layout_marginTop="66dp"
                    android:layout_marginEnd="117dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toTopOf="@+id/meeting_code"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo" />

                <Button
                    android:id="@+id/joinMeeting"
                    android:layout_width="244dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="83dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="84dp"
                    android:background="@color/blue_50"
                    android:text="Unirte"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/meeting_code" />

                <Button
                    android:id="@+id/startMetting"
                    android:layout_width="244dp"
                    android:layout_height="64dp"
                    android:background="@color/blue_50"
                    android:layout_marginStart="83dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="84dp"
                    android:text="@string/startMeeting"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/joinMeeting" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="411dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:text="Por favor solicita tu codigo de serenata al artista"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/startMetting" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>