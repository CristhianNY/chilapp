<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ui.activities.meeting.ZoomMeetingActivity">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="178dp"
            android:layout_height="163dp"
            app:srcCompat="@drawable/logo" />


        <EditText
            android:id="@+id/meeting_code"
            android:layout_width="220dp"
            android:layout_height="54dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Id del evento"
            android:inputType="number" />


        <Button
            android:id="@+id/joinMeeting"
            android:layout_width="241dp"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:background="@color/blue_50"
            android:text="@string/unirte" />

        <Button
            android:id="@+id/reservation_serenata"
            android:layout_width="241dp"
            android:layout_height="38dp"
            android:visibility="gone"
            android:background="@color/blue_50"
            android:layout_marginTop="30dp"
            android:text="Agendar serenata" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="411dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>